rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile Pictures Rules
    // Path structure: ProfilePictures/{userId}/profile.{extension}
    match /ProfilePictures/{userId}/{allPaths=**} {
      // Anyone can read profile pictures (needed for displaying in chats)
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      // Additional validation: max 5MB and images only
      allow write, delete: if request.auth != null 
                           && request.auth.uid == userId
                           && (resource == null || request.resource.size < 5 * 1024 * 1024)
                           && (resource == null || request.resource.contentType.matches('image/.*'));
    }
  }
}
